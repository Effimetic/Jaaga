# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
EXPO_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Configuration
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_NAME=Boat Ticketing Platform
EXPO_PUBLIC_APP_VERSION=1.0.0

# SMS Configuration (if using third-party SMS service)
EXPO_PUBLIC_SMS_PROVIDER=supabase
EXPO_PUBLIC_SMS_API_KEY=your-sms-api-key

# Payment Gateway Configuration
EXPO_PUBLIC_BML_MERCHANT_ID=your-bml-merchant-id
EXPO_PUBLIC_BML_API_KEY=your-bml-api-key
EXPO_PUBLIC_BML_ENVIRONMENT=sandbox

# OCR Service Configuration (for transfer slip processing)
EXPO_PUBLIC_OCR_API_KEY=your-ocr-api-key
EXPO_PUBLIC_OCR_ENDPOINT=https://api.your-ocr-service.com

# Debug Settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=info

# Currency Settings
EXPO_PUBLIC_DEFAULT_CURRENCY=MVR
EXPO_PUBLIC_SUPPORTED_CURRENCIES=MVR,USD,EUR

# Business Settings
EXPO_PUBLIC_DEFAULT_BOOKING_HOLD_MINUTES=15
EXPO_PUBLIC_DEFAULT_CREDIT_TERMS_DAYS=30
EXPO_PUBLIC_DEFAULT_APP_FEE_PER_TICKET=10.00

# File Upload Configuration
EXPO_PUBLIC_MAX_FILE_SIZE_MB=10
EXPO_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
